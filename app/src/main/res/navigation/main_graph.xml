<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/recipe_list_fragment">

    <fragment
        android:id="@+id/recipe_list_fragment"
        android:name="ru.egordenis.simplefood.presentation.feature.recipelist.RecipeListFragment"
        tools:layout="@layout/fragment_recipe_list">

        <action
            android:id="@+id/navigate_to_recipe_detail_fragment"
            app:destination="@id/recipe_detail_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/recipe_detail_fragment"
        android:name="ru.egordenis.simplefood.presentation.feature.recipedetail.RecipeDetailFragment"
        tools:layout="@layout/fragment_recipe_detail">

        <argument
            android:name="clicked_recipe"
            app:argType="string" />

    </fragment>
</navigation>